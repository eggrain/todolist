@page "{id}"
@model todolist.Pages.Checklists.PrintModel
@{
  Layout = "_PrintLayout";
  ViewData["Title"] = "Print Checklist";
}

<h1 class="mb-4">@Model.Checklist.Name</h1>

<div class="row g-2 mb-4">
  @foreach (var task in Model.Checklist.Tasks.OrderBy(t => t.Order))
  {
    <div class="col-12 col-sm-6">
      <div class="list-group-item d-flex justify-content-between align-items-center p-1">
        <span>@task.Description</span>
        <input class="form-check-input" type="checkbox" disabled />
      </div>
    </div>
  }
</div>

<div class="do-not-print d-flex justify-content-center">
  <button type="button" onclick="window.print()"
      class="btn btn-sm btn-outline-secondary">
    Print
  </button>
</div>
